<%= form_for(song) do |f| %>
    <% if song.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

          <ul>
            <% song.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :soundcloud_id %>
      <%= f.text_field :soundcloud_id, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :lyrics %>
      <%= f.text_area :lyrics, class: 'form-control', rows: 8  %>
    </div>

    <div class="form-group">
      <%= f.label :tablature %>
      <%= f.text_area :tablature, class: 'form-control', rows: 8 %>
    </div>

    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control', rows: 8  %>
    </div>

    <%= f.submit class: 'btn btn-default' %>
<% end %>
