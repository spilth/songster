<p id="notice"><%= notice %></p>

<h1><%= @song.title %></h1>

<%- if @song.soundcloud_id.present? %>

<div class="row">
  <div class="col-md-12">
    <iframe width="100%" height="166" scrolling="no" frameborder="no"
            src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= @song.soundcloud_id %>&amp;auto_play=false&amp;show_user=true">
    </iframe>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-6">
    <p>
      <%= markdown(@song.lyrics) %>
    </p>
  </div>
  <div class="col-md-6">
    <%- if @song.tablature.present? %>
        <div class="vex-tabdiv"><%= @song.tablature %></div>
    <% end %>
  </div>
</div>

<%- if @song.notes.present? %>
  <p>
    <strong>Notes:</strong>
    <%= @song.notes %>
  </p>
<% end %>

<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
