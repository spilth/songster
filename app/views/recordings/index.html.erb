<p id="notice"><%= notice %></p>

<h1>Recordings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Song</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @recordings.each do |recording| %>
      <tr>
        <td><%= link_to recording.name, recording %></td>
        <td><%= link_to recording.song.title, recording.song %></td>
        <td><%= link_to 'Edit', edit_recording_path(recording) %></td>
        <td><%= link_to 'Destroy', recording, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recording', new_recording_path %>
